{
    "name": "bakabot/codestandard",
    "description": "Wraps the PHPCSFixer standard into a class for easier reuse.",
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "friendsofphp/php-cs-fixer": "^2.18"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "roave/security-advisories": "dev-latest",
        "vimeo/psalm": "^4.4"
    },
    "autoload": {
        "psr-4": {
            "Bakabot\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bakabot\\": "tests/"
        }
    },
    "config": {
        "lock": false,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    }
}
